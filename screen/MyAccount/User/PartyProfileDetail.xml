<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-3.xsd"
        default-menu-title="Party Profile Detail" default-menu-index="2" default-menu-include="false">

    <parameter name="partyId" required="true" from="ec.user.userAccount?.partyId"/>
    <parameter name="emplPositionClassId" required="true"/>

<!--    <transition name="addProfile"><default-response url="AddProfile"/></transition>-->

    <transition name="setPartyProfileDimension"><service-call name="store#mantle.party.PartyDimension"/>
        <default-response url="."/></transition>
    <transition name="setPartyProfileSkill"><service-call name="store#mantle.humanres.ability.PartySkill"/>
        <default-response url="."/></transition>

    <transition name="setPartyClassification"><service-call name="mantle.party.PartyServices.set#PartyClassification"/>
        <default-response url="."/></transition>
    <transition name="removePartyClassification"><service-call name="mantle.party.PartyServices.remove#PartyClassification"/>
        <default-response url="."/></transition>
    <transition-include name="getPartyClassificationList" location="component://SimpleScreens/template/party/PartyTransitions.xml"/>

<!--    <transition name="setPartyProfile"><service-call name="store#mantle.humanres.position.EmplPositionClassParty"/>-->
<!--        <default-response url="."/></transition>-->
    <transition name="setProfile"><actions><log level="warn" message="transition thingId ${thingId}"/></actions>
        <default-response type="none" save-parameters="true"/></transition>

    <actions>
        <if condition="partyId != ec.user.userAccount.partyId"><return error="true" message="Party not found with ID ${partyId}"/></if>
        <entity-find entity-name="mantle.humanres.position.EmplPositionClassPartyClass" list="epcpcList">
            <econdition field-name="emplPositionClassId"/><econdition field-name="partyId"/>
            <date-filter/><order-by field-name="title"/>
        </entity-find>
        <set field="epcpc" from="epcpcList?.getFirst()"/>
        <if condition="epcpc == null"><return error="true" message="Profile not found with ID ${emplPositionClassId}"/></if>
    </actions>
    <widgets>
        <container-row><row-col xs="0" sm="1" md="2" lg="3">
        </row-col><row-col xs="12" sm="10" md="8" lg="6">

