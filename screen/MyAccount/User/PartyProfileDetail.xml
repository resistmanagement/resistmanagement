                <entity-find entity-name="mantle.humanres.position.EmplPositionClassDimension" list="epcdList">
                    <econdition field-name="emplPositionClassId" from="epcpc?.emplPositionClassId"/></entity-find>
                <entity-find entity-name="mantle.party.PartyDimension" list="pdList">
                    <econdition field-name="uomDimensionTypeId" operator="in" from="epcdList?.uomDimensionTypeId"/></entity-find>

                <entity-find entity-name="mantle.humanres.position.EmplPositionClassSkill" list="epcsList">
                    <econdition field-name="emplPositionClassId" from="epcpc?.emplPositionClassId"/></entity-find>
                <log level="warn" message="epcsList ${epcsList?.skillTypeEnumId?.toString()}"/>
                <entity-find entity-name="mantle.humanres.ability.PartySkill" list="psList">
                    <econdition field-name="skillTypeEnumId" operator="in" from="epcsList?.skillTypeEnumId"/></entity-find>
                <entity-find entity-name="moqui.basic.Enumeration" list="eList">
                    <econdition field-name="enumId" operator="in" from="epcsList?.skillTypeEnumId"/>
                    <econdition field-name="enumTypeId" value="SkillType"/></entity-find>
                <log level="warn" message="psList ${psList?.toString()}"/>
