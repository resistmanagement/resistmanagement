<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-3.xsd"
        default-menu-title="Dashboard" default-menu-index="1">

    <parameter name="partyId" required="true" from="ec.user.userAccount?.partyId"/>
    <parameter name="thingId"/>

    <transition name="setPartyClassification"><service-call name="mantle.party.PartyServices.set#PartyClassification"/>
        <default-response url="."/></transition>
<!--    <transition name="removePartyClassification"><service-call name="mantle.party.PartyServices.remove#PartyClassification"/>-->
<!--        <default-response url="."/></transition>-->
<!--    <transition-include name="getPartyClassificationList" location="component://SimpleScreens/template/party/PartyTransitions.xml"/>-->

    <transition name="setPartyProfile"><service-call name="store#mantle.humanres.position.EmplPositionClassParty"/>
        <default-response url="."/></transition>
    <transition name="setProfile"><actions>
        <log level="warn" message="transition thingId ${thingId}"/>
    </actions>
        <default-response type="none" save-parameters="true"/></transition>
    <transition name="setPartyWorkEffort"><service-call name="store#mantle.work.effort.WorkEffort"/>
        <default-response url="."/></transition>

    <transition name="setPartyFacility"><service-call name="store#mantle.facility.Facility"/>
        <default-response url="."/></transition>
    <transition name="createOrganization"><service-call name="mantle.party.PartyServices.create#Organization"/>
        <default-response url="."/></transition>

    <transition name="partyProfileDetail"><default-response url="//apps/resistapp/User/PartyProfileDetail"/></transition>

    <actions>
        <if condition="partyId != ec.user.userAccount.partyId"><return error="true" message="Party not found with ID ${partyId}"/></if>
    </actions>
    <widgets>
        <container-row><row-col lg="6">

            <section name="PartyProfileSection"><actions>
                <entity-find entity-name="mantle.party.PartyDetail" list="pdList">
                    <econditions combine="or"><econdition field-name="partyId"/>
                        <econdition field-name="ownerPartyId" from="partyId"/>
                    </econditions></entity-find>
                <entity-find entity-name="mantle.facility.FacilityAndOwnerDetail" list="faodList">
                    <econdition field-name="partyId" operator="in" from="pdList?.partyId"/>
                    <econdition field-name="ownerPartyId" operator="in" from="pdList?.partyId"/></entity-find>
                <set field="pdfaodList" from="pdList + faodList"/>
<!--                <log level="warn" message="pdfaodList ${pdfaodList}"/>-->
                <entity-find entity-name="mantle.humanres.position.EmplPositionClassPartyClass" list="epcpcList">
                    <econdition field-name="partyId"/><date-filter/><order-by field-name="-fromDate"/></entity-find>
            </actions><widgets>
                <container-box><box-header title="Profiles"/><box-toolbar>
                    <container-dialog id="SetPartyProfileDialog" button-text="Set Profile">
<!--                        <form-single name="SetPartyProfileForm" transition="setProfile">-->
<!--&lt;!&ndash;                            <field name="partyId"><default-field><hidden/></default-field></field>&ndash;&gt;-->
<!--                            <field name="thingId"><default-field title="Type">-->
<!--                                <drop-down allow-empty="true" submit-on-select="true">-->
<!--                                    <list-options list="pdfaodList" key="${facilityId ?: partyId}"-->
<!--                                        text="${facilityId ? 'Facility: ' + facilityName + ' owned by ' + (ownerPartyId == ec.user.userAccount.partyId ? 'Me' : (organizationName ?: firstName + ' ' + lastName)) : 'Person: ' + firstName + ' ' + lastName + (partyOwnerPartyId ? ' owned by ' + (partyOwnerPartyId == ec.user.userAccount.partyId ? 'Me' : (partyOwnerPartyId) ) : '') }"/>-->
<!--                                </drop-down>-->
<!--                            </default-field></field>-->
<!--                            <field name="submitButton"><default-field title="Set"><submit/></default-field></field>-->
<!--                        </form-single>-->
                        <form-single name="SetPartyProfileForm" transition="setPartyProfile">
                            <field name="partyId"><default-field><hidden/></default-field></field>
                            <field name="emplPositionClassId"><default-field title="Type">
                                <drop-down allow-empty="true" submit-on-select="true">
                                    <entity-options key="${emplPositionClassId}" text="${title}">
                                        <entity-find entity-name="mantle.humanres.position.EmplPositionClass"><order-by field-name="title"/>
                                    </entity-find></entity-options>
                                </drop-down>
                            </default-field></field>
                            <field name="submitButton"><default-field title="Set"><submit/></default-field></field>
                        </form-single>
                    </container-dialog>
                </box-toolbar><box-body-nopad>
                    <form-list name="PartyProfileForm" list="epcpcList" skip-form="true" skip-header="true">
                        <field name="emplPositionClassId"><default-field><hidden/></default-field></field>
                        <field name="partyId"><default-field><hidden/></default-field></field>
                        <field name="fromDate"><default-field><hidden/></default-field></field>
                        <field name="thruDate" from="ec.user.nowTimestamp"><default-field><hidden/></default-field></field>
                        <field name="title"><default-field title="Profile"><link url="partyProfileDetail" link-type="anchor" text="${title}"/></default-field></field>
<!--                        <field name="submitButton"><default-field title=""><submit icon="fa fa-trash" confirmation="Delete Party Profile?"/></default-field></field>-->
                    </form-list>
                </box-body-nopad></container-box>
            </widgets></section>

            <section name="PartyWorkEffortSection"><actions>
                <entity-find entity-name="mantle.work.effort.WorkEffortAndParty" list="weapList">
                    <econdition field-name="ownerPartyId" from="partyId"/></entity-find>
            </actions><widgets>
                <container-box><box-header title="Projects"/><box-toolbar>
                    <container-dialog id="SetPartyWorkEffortDialog" button-text="Set Project">
                        <form-single name="SetPartyWorkEffortForm" transition="setPartyWorkEffort">
                            <field name="ownerPartyId" from="partyId"><default-field><hidden/></default-field></field>
                            <field name="workEffortName"><default-field title="Project Name"><text-line size="15"/></default-field></field>
                            <field name="submitButton"><default-field title="Set"><submit/></default-field></field>
                        </form-single>
                    </container-dialog>
                </box-toolbar><box-body-nopad>
                    <form-list name="PartyWorkEffortForm" list="weapList" skip-form="true" skip-header="true">
                        <field name="workEffortId"><default-field><hidden/></default-field></field>
                        <field name="workEffortName"><default-field title="Project"><display/></default-field></field>
                    </form-list>
                </box-body-nopad></container-box>
            </widgets></section>


        </row-col><row-col lg="6">
            <!-- ========== Right Column ========== -->

            <section name="PartyFacilitySection"><actions>
                <entity-find entity-name="mantle.facility.Facility" list="fList">
                    <econdition field-name="ownerPartyId" from="partyId"/></entity-find>
            </actions><widgets>
                <container-box><box-header title="Facilities"/><box-toolbar>
                    <container-dialog id="SetPartyFacilityDialog" button-text="Set Facility">
                        <form-single name="SetPartyFacilityForm" transition="setPartyFacility">
                            <field name="ownerPartyId" from="partyId"><default-field><hidden/></default-field></field>
                            <field name="facilityName"><default-field title="Facility Name"><text-line size="15"/></default-field></field>
                            <field name="submitButton"><default-field title="Set"><submit/></default-field></field>
                        </form-single>
                    </container-dialog>
                </box-toolbar><box-body-nopad>
                    <form-list name="PartyFacilityForm" list="fList" skip-form="true" skip-header="true">
                        <field name="facilityId"><default-field><hidden/></default-field></field>
                        <field name="facilityName"><default-field title="Project"><display/></default-field></field>
                    </form-list>
                </box-body-nopad></container-box>
            </widgets></section>

            <section name="PartyOrganizationSection"><actions>
                <entity-find entity-name="mantle.party.PartyDetail" list="pdList">
                    <econdition field-name="ownerPartyId" from="partyId"/></entity-find>
            </actions><widgets>
                <container-box><box-header title="Organizations"/><box-toolbar>
                    <container-dialog id="SetPartyOrganizationDialog" button-text="Set Organization">
                        <form-single name="SetPartyOrganizationForm" transition="createOrganization">
                            <field name="ownerPartyId" from="partyId"><default-field><hidden/></default-field></field>
                            <field name="organizationName"><default-field title="Organization Name"><text-line size="15"/></default-field></field>
                            <field name="submitButton"><default-field title="Set"><submit/></default-field></field>
                        </form-single>
                    </container-dialog>
                </box-toolbar><box-body-nopad>
                    <form-list name="PartyOrganizationForm" list="pdList" skip-form="true" skip-header="true">
                        <field name="workEffortId"><default-field><hidden/></default-field></field>
                        <field name="organizationName"><default-field title="Project"><display/></default-field></field>
                    </form-list>
                </box-body-nopad></container-box>
            </widgets></section>

        </row-col></container-row>
    </widgets>
</screen>
