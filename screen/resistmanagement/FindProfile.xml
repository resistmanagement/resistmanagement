<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-3.xsd"
        default-menu-title="Find Profiles" default-menu-index="1">

    <transition name="createPersonProfile"><service-call name="resistmanagement.ProfileServices.create#CreatePersonProfile"/>
        <default-response url="."/></transition>
    <transition name="deletePersonProfile"><service-call name="store#mantle.party.PartyRelationship" in-map="[partyRelationshipId:partyRelationshipId, thruDate:ec.user.nowTimestamp]"/>
        <default-response url="."/></transition>

    <actions>
        <entity-find entity-name="mantle.party.PartyFromAndToRelationship" list="pfatrList">
            <econdition field-name="relationshipTypeEnumId" value="PrtManager"/>
            <econdition field-name="fromPartyId" from="ec.user.userAccount.partyId"/>
            <date-filter/>
        </entity-find>
    </actions>

    <widgets>
        <container-row><row-col lg="12">
            <section name="PartyProfileSection"><actions>
            </actions><widgets>

                <container-box><box-header title="Profiles"/><box-toolbar>
                    <container-dialog id="SetTalentProfileDialog" button-text="Create Personal Profile">
                        <form-single name="SetTalentProfileForm" transition="createPersonProfile">
                            <field name="nickname"><default-field title="Profile Name"><text-line/></default-field></field>
                            <field name="submitButton"><default-field title="Set"><submit/></default-field></field>
                        </form-single>
                    </container-dialog>
                </box-toolbar><box-body-nopad>
                    <form-list name="TalentProfileForm" list="pfatrList" transition="deletePersonProfile">
                        <field name="partyRelationshipId"><default-field><hidden/></default-field></field>
                        <field name="fromRoleTypeId"><default-field title="You are"><display/></default-field></field>
                        <field name="toNickname"><default-field title="to"><link url="../EditProfile" text="${toNickname}" tooltip="See Profile" parameter-map="[partyId:toPartyId]"/></default-field></field>
                        <field name="toRoleTypeId"><default-field title="which is a"><display/></default-field></field>
                        <field name="submit"><default-field title=""><submit icon="fa fa-trash"/></default-field></field>
                    </form-list>
                </box-body-nopad></container-box>
            </widgets></section>

        </row-col></container-row>
    </widgets>
</screen>
