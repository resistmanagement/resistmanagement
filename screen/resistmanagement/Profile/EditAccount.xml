<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-3.xsd"
        default-menu-title="Edit Account" default-menu-index="2" default-menu-include="true">

    <parameter name="partyId" required="true"/>

    <transition name="setTalentProfile"><service-call name="resistmanagement.ProfileServices.store#TalentProfile"/>
        <default-response url="."/></transition>
    <transition name="deleteTalentProfile"><service-call name="delete#mantle.humanres.position.EmplPositionClassParty"/>
        <default-response url="."/></transition>

<!--    <transition name="setPartyWorkEffort"><service-call name="store#mantle.work.effort.WorkEffort"/>-->
<!--        <default-response url="."/></transition>-->

<!--    <transition name="partyProfileDetail"><default-response url="PartyProfileDetail" parameter-map="[partyId:partyId, emplPositionClassId:emplPositionClassId]"/></transition>-->

    <transition name="setPartyDimension"><service-call name="store#mantle.party.PartyDimension"/>
        <default-response url="."/></transition>
    <transition name="setPartyClassificationAppl"><service-call name="resistmanagement.ProfileServices.store#PartyClassificationAppl"/>
        <default-response url="." save-current-screen="true"/></transition>
    <transition name="setPartySkill"><service-call name="resistmanagement.ProfileServices.set#PartySkills"/>
        <default-response url="." save-current-screen="true"/></transition>

    <transition name="downloadContent" read-only="true">
        <parameter name="partyContentId"/>
        <actions><entity-find-one entity-name="mantle.party.PartyContent" value-field="partyContent"/>
            <script>ec.web.sendResourceResponse(partyContent?.contentLocation)</script></actions>
        <default-response type="none"/>
    </transition>
    <transition name="setTalentProfile"><service-call name="resistmanagement.ProfileServices.store#TalentProfile"/>
        <default-response url="."/></transition>
    <transition name="updateProfilePicture"><service-call name="resistmanagement.ProfileServices.upload#ProfilePictureAttachment" in-map="[partyId:partyId, contentFile:contentFile]"/>
        <default-response url="."/></transition>

<!--    <pre-actions>-->
<!--        <script>html_stylesheets.add("/apps/resistmanagement/css/resistmanagement.css")</script>-->
<!--    </pre-actions>-->

    <actions>
        <entity-find entity-name="mantle.party.PartyFromAndToRelationship" list="pfatrList">
            <econdition field-name="toPartyId" from="partyId"/>
            <econdition field-name="relationshipTypeEnumId" value="PrtManager"/>
            <econdition field-name="fromPartyId" from="ec.user.userAccount.partyId"/>
            <date-filter/></entity-find>

        <if condition="pfatrList?.getFirst()?.toPartyId == null"><return type="danger" error="true" message="No Party found with id ${partyId}"/></if>

        <entity-find-one entity-name="mantle.party.Party" value-field="party">
            <field-map field-name="partyId"/></entity-find-one>
        <!-- Temporarily make sure that the party has a valid profile picture content -->
<!--        <service-call name="resistmanagement.ProfileServices.upload#ProfilePictureAttachment" in-map="[partyId:partyId]"/>-->
        <entity-find entity-name="mantle.party.PartyContent" list="partyContentList">
            <econdition field-name="partyId"/>
            <econdition field-name="partyContentTypeEnumId" value="PcntPrimaryImage"/>
            <order-by field-name="-contentDate"/></entity-find>
        <set field="partyProfilePictureList" from="[[partyContentId:partyContentList.getFirst().partyContentId, partyText:party?.person ? (party.person.nickname ?: party.person.firstName + ' ' + party.person.lastName) : party.organization.organizationName]]"/>

        <entity-find entity-name="mantle.humanres.position.EmplPositionClassPartyClass" list="epcpcList">
            <econdition field-name="partyId"/><date-filter/><order-by field-name="-fromDate"/></entity-find>
        <!-- TODO: Allow for different relationships between the current party and a work effort -->
        <entity-find entity-name="mantle.work.effort.WorkEffortAndParty" list="weapList">
            <econdition field-name="ownerPartyId" from="partyId"/></entity-find>

        <!-- TODO: Allow for different relationships between the current party and a facility -->
        <entity-find entity-name="mantle.facility.Facility" list="fList">
            <econdition field-name="ownerPartyId" from="partyId"/></entity-find>
        <!-- TODO: Allow for different relationships between the current party and an organization -->
        <entity-find entity-name="mantle.party.PartyDetail" list="pdList">
            <econdition field-name="ownerPartyId" from="partyId"/></entity-find>
    </actions>
    <widgets>
        <form-list name="PartyProfilePictureSection" list="partyProfilePictureList" skip-form="true" skip-header="true">
            <field name="content"><default-field><image url="downloadContent" url-type="transition" width="100px" parameter-map="[partyContentId:partyContentList.getFirst().partyContentId]"/></default-field></field>
            <field name="partyText"><default-field><label text="${partyText}" type="h2"/></default-field></field>
            <field name="updateProfilePictureButton"><default-field>
                <container-dialog id="UpdateProfilePicture" button-text="Update Picture">
                    <form-single name="UpdateProfilePictureForm" transition="updateProfilePicture">
                        <field name="partyId"><default-field><hidden/></default-field></field>
                        <field name="contentFile"><default-field><file/></default-field></field>
                        <field name="submit"><default-field><submit/></default-field></field>
                    </form-single>
                </container-dialog>
            </default-field></field>
        </form-list>
        <container-row><row-col lg="12">
            <section name="PartyProfileSection"><actions>
            </actions><widgets>
                <container-box><box-header title="Profiles"/><box-toolbar>
                    <container-dialog id="SetTalentProfileDialog" button-text="Set Profile">
                        <form-single name="SetTalentProfileForm" transition="setTalentProfile">
                            <field name="partyId"><default-field><hidden/></default-field></field>
                            <field name="emplPositionClassId"><default-field title="Type">
                                <drop-down allow-empty="true" submit-on-select="true">
                                    <entity-options key="${emplPositionClassId}" text="${title}">
                                        <entity-find entity-name="mantle.humanres.position.EmplPositionClass"><order-by field-name="title"/>
                                    </entity-find></entity-options>
                                </drop-down>
                            </default-field></field>
                        </form-single>
                    </container-dialog>
                </box-toolbar><box-body-nopad>
                    <section-iterate name="ProfileSectionIterate" list="epcpcList" entry="epcpc">
                        <actions>
                            <set field="partyId" from="epcpc.partyId"/>
                            <set field="emplPositionClassId" from="epcpc.emplPositionClassId"/>
                            <set field="fromDate" from="epcpc.fromDate"/>

                            <entity-find-one entity-name="mantle.humanres.position.EmplPositionClass" value-field="emplPositionClass">
                                <field-map field-name="emplPositionClassId"/></entity-find-one>
                            <if condition="emplPositionClass == null"><return error="true" message="Profile not found with ID ${emplPositionClassId}"/></if>

                            <entity-find entity-name="mantle.humanres.position.EmplPositionClassDimension" list="epcdList">
                                <econdition field-name="emplPositionClassId"/></entity-find>

                            <set field="epcdpList" from="[]"/>
                            <iterate list="epcdList" entry="epcd">
                                <entity-find entity-name="mantle.party.PartyDimension" list="pdList">
                                    <econdition field-name="partyId"/>
                                    <econdition field-name="uomDimensionTypeId" from="epcd.uomDimensionTypeId"/>
                                    <order-by field-name="-dimensionDate"/></entity-find>
                                <if condition="pdList?.getFirst()"><then>
                                    <script>epcdpList.add(pdList.getFirst().getMap() + [uomDescription:pdList.getFirst().uom.description, uomTypeDescription:pdList.getFirst().type.description])</script>
                                </then><else>
                                    <script>epcdpList.add(epcd.getMap() + [partyId:partyId, uomId:epcd.type.defaultUomId, uomDescription:epcd.type.defaultUom.description, uomTypeDescription:epcd.type.description])</script>
                                </else></if>
                            </iterate>

                            <entity-find entity-name="mantle.party.EmplPositionClassPtyClsTp" list="epcpctList">
                                <econdition field-name="emplPositionClassId"/></entity-find>

                            <set field="epcpctpList" from="[]"/>
                            <iterate list="epcpctList" entry="epcpct">
                                <entity-find entity-name="mantle.party.PartyClassificationAndAppl" list="pcapList">
                                    <econdition field-name="partyId"/>
                                    <econdition field-name="classificationTypeEnumId" from="epcpct.classificationTypeEnumId"/>
                                    <date-filter/><order-by field-name="-thruDate,-fromDate"/></entity-find>

                                <set field="classificationTypeDescription" from="epcpct.type.description"/>
                                <if condition="pcapList?.getFirst()"><then>
                                    <script>epcpctpList.add(pcapList.getFirst().getMap() + [classificationTypeDescription:classificationTypeDescription])</script>
                                </then><else>
                                    <script>epcpctpList.add(epcpct.getMap() + [partyId:partyId, classificationTypeDescription:classificationTypeDescription])</script>
                                </else></if>
                            </iterate>

                            <entity-find entity-name="mantle.humanres.position.EmplPositionClassSkill" list="epcsList">
                                <econdition field-name="emplPositionClassId"/></entity-find>
                            <entity-find entity-name="mantle.humanres.ability.PartySkill" list="psList">
                                <econdition field-name="skillTypeEnumId" operator="in" from="epcsList.skillTypeEnumId"/>
                                <econdition field-name="partyId"/></entity-find>

                            <set field="epcspList" from="[]"/>
                            <iterate list="epcsList" entry="epcs"><script>epcspList.add(epcs.getMap() + [partyId:partyId, skillTypeDescription:epcs.skillTypeEnum.description])</script></iterate>
                        </actions>
                        <widgets>
                            <container-box><box-header title="${emplPositionClass.title}"></box-header><box-toolbar>
                                    <link url="deleteTalentProfile" text="Delete ${emplPositionClass.title}" parameter-map="[partyId:partyId, emplPositionClassId:emplPositionClassId, fromDate:fromDate]"
                                        confirmation="Are you sure you want to delete the ${emplPositionClass.title} Profile?"/>
                                </box-toolbar><box-body-nopad>
                                    <form-list name="TalentProfileTypeDimensionForm" list="epcdpList" transition="setPartyDimension" skip-header="true">
                                        <field name="emplPositionClassId"><default-field><hidden/></default-field></field>
                                        <field name="partyId"><default-field><hidden/></default-field></field>
                                        <field name="uomDimensionTypeId"><default-field><display text="${uomTypeDescription}"/></default-field></field>
                                        <field name="dimensionDate" from="ec.user.nowTimestamp"><default-field><hidden/></default-field></field>
                                        <field name="value"><default-field><text-line/></default-field></field>
                                        <field name="uomId"><default-field><display text="${uomDescription}"/></default-field></field>
                                        <field name="submitButton"><default-field title="Update"><submit/></default-field></field>
                                    </form-list>
                                    <form-list name="TalentProfileTypeclassificationTypeForm" list="epcpctpList" transition="setPartyClassificationAppl" skip-header="true">
                                        <field name="emplPositionClassId"><default-field><hidden/></default-field></field>
                                        <field name="partyId"><default-field><hidden/></default-field></field>
                                        <field name="classificationTypeEnumId"><default-field><display text="${classificationTypeDescription}"/></default-field></field>
                                        <field name="partyClassificationId"><default-field title="${classificationTypeDescription}"><drop-down allow-empty="true" submit-on-select="true">
                                            <entity-options key="${partyClassificationId}" text="${description}">
                                                <entity-find entity-name="mantle.party.PartyClassification" list="pcList">
                                                    <econdition field-name="classificationTypeEnumId"/></entity-find></entity-options>
                                        </drop-down></default-field></field>
                                    </form-list>
                                    <form-single name="TalentProfileTypeSkillForm" transition="setPartySkill">
                                        <field name="emplPositionClassId"><default-field><hidden/></default-field></field>
                                        <field name="partyId"><default-field><hidden/></default-field></field>
                                        <field name="skillTypeEnumIdList" from="psList.skillTypeEnumId"><default-field title="Skills"><drop-down allow-empty="false" allow-multiple="true" submit-on-select="true">
                                            <list-options list="epcspList" key="${skillTypeEnumId}" text="${skillTypeDescription}"/>
                                        </drop-down></default-field></field>
                                    </form-single>
                                </box-body-nopad>
                            </container-box>
                        </widgets>
                    </section-iterate>

<!--                    <form-list name="TalentProfileForm" list="epcpcList" skip-form="true" skip-header="true">-->
<!--                        <field name="emplPositionClassId"><default-field><hidden/></default-field></field>-->
<!--                        <field name="partyId"><default-field><hidden/></default-field></field>-->
<!--                        <field name="fromDate"><default-field><hidden/></default-field></field>-->
<!--                        <field name="thruDate" from="ec.user.nowTimestamp"><default-field><hidden/></default-field></field>-->
<!--                        <field name="title"><default-field title="Profile"><dynamic-dialog id="TalentProfileEditForm" button-text="${title}" transition="partyProfileDetail"/></default-field></field>-->
<!--                    </form-list>-->
                </box-body-nopad></container-box>
            </widgets></section>

        </row-col><row-col lg="6">

<!--            <section name="PartyWorkEffortSection"><actions>-->
<!--            </actions><widgets>-->
<!--                <container-box><box-header title="Projects"/><box-toolbar>-->
<!--                    <container-dialog id="SetPartyWorkEffortDialog" button-text="Set Project">-->
<!--                        <form-single name="SetPartyWorkEffortForm" transition="setPartyWorkEffort">-->
<!--                            <field name="ownerPartyId" from="partyId"><default-field><hidden/></default-field></field>-->
<!--                            <field name="workEffortName"><default-field title="Project Name"><text-line size="15"/></default-field></field>-->
<!--                            <field name="submitButton"><default-field title="Set"><submit/></default-field></field>-->
<!--                        </form-single>-->
<!--                    </container-dialog>-->
<!--                </box-toolbar><box-body-nopad>-->
<!--                    <form-list name="PartyWorkEffortForm" list="weapList" skip-form="true" skip-header="true">-->
<!--                        <field name="workEffortId"><default-field><hidden/></default-field></field>-->
<!--                        <field name="workEffortName"><default-field title="Project"><display/></default-field></field>-->
<!--                    </form-list>-->
<!--                </box-body-nopad></container-box>-->
<!--            </widgets></section>-->

        </row-col></container-row>
    </widgets>
</screen>
