<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-3.xsd"
        default-menu-title="Posts" default-menu-index="4" default-menu-include="true">

    <parameter name="partyId" required="true"/>

    <always-actions><service-call name="resistmanagement.ProfileServices.check#AccountEdit" in-map="[partyId:partyId]"/></always-actions>

    <transition name="setTalentProfile"><service-call name="resistmanagement.ProfileServices.store#TalentProfile"/>
        <default-response url="."/></transition>
    <transition name="deleteTalentProfile"><service-call name="delete#mantle.humanres.position.EmplPositionClassParty"/>
        <default-response url="."/></transition>

    <transition name="setPartyDimension"><service-call name="store#mantle.party.PartyDimension"/>
        <default-response url="."/></transition>
    <transition name="setPartyClassificationAppl"><service-call name="resistmanagement.ProfileServices.store#PartyClassificationAppl"/>
        <default-response url="." save-current-screen="true"/></transition>
    <transition name="setPartySkill"><service-call name="resistmanagement.ProfileServices.set#PartySkills"/>
        <default-response url="." save-current-screen="true"/></transition>

    <transition name="downloadContent" read-only="true">
        <parameter name="partyContentId"/>
        <actions><entity-find-one entity-name="mantle.party.PartyContent" value-field="partyContent"/>
            <script>ec.web.sendResourceResponse(partyContent?.contentLocation)</script></actions>
        <default-response type="none"/>
    </transition>
    <transition name="setTalentProfile"><service-call name="resistmanagement.ProfileServices.store#TalentProfile"/>
        <default-response url="."/></transition>
    <transition name="addPost"><service-call name="resistmanagement.ProfileServices.upload#PostAttachment" in-map="[partyId:partyId, contentFile:contentFile]"/>
        <default-response url="."/></transition>

    <actions>
        <entity-find-one entity-name="mantle.party.Party" value-field="party">
            <field-map field-name="partyId"/></entity-find-one>

        <!-- Temporarily make sure that the party has a valid profile picture content -->
<!--        <service-call name="resistmanagement.ProfileServices.upload#ProfilePictureAttachment" in-map="[partyId:partyId]"/>-->
        <entity-find entity-name="mantle.party.PartyContent" list="partyContentList">
            <econdition field-name="partyId"/>
            <econdition field-name="contentLocation" operator="is-not-null"/>
            <econdition field-name="partyContentTypeEnumId" value="PcntPostImageSmall"/>
            <order-by field-name="-contentDate"/></entity-find>
        <set field="postTitleList" from="[[partyContentId:partyContentList.getFirst()?.partyContentId, partyText:party.pseudoId]]"/>

        <set field="postList" from="[]"/>
        <set field="intermediatePostList" from="[]"/>
        <iterate list="partyContentList" entry="partyContent">
            <script>intermediatePostList.add(partyContent.partyContentId)</script>
<!--            <log level="warn" message="intermediatePostList ${intermediatePostList} ${partyContent_index % 3}"/>-->

            <if condition="partyContent_index % 3 == 2 || partyContent_index == partyContentList.size() - 1">
                <script>postList.add(intermediatePostList)</script>
                <set field="intermediatePostList" from="[]"/>
<!--                <log level="warn" message="postList ${postList} ${partyContent_index % 3}"/>-->
            </if>
        </iterate>

        <service-call name="org.moqui.impl.ImageServices.get#ImageReaderMIMETypes" out-map="context"/>
    </actions>
    <widgets>
        <container-row><row-col lg="12">
            <form-list name="AddPostsSection" list="postTitleList" skip-form="true" skip-header="true">
                <field name="partyText"><default-field><label text="Posts" type="h2"/></default-field></field>
                <field name="addPostButton"><default-field>
                    <container-dialog id="AddPost" button-text="Add Post">
                        <form-single name="AddPostForm" transition="addPost">
                            <field name="partyId"><default-field><hidden/></default-field></field>
                            <field name="contentFile"><default-field><file accept="${String.join(', ', imageReaderMIMETypes)}"/></default-field></field>
                            <field name="submit"><default-field><submit/></default-field></field>
                        </form-single>
                    </container-dialog>
                </default-field></field>
            </form-list>

            <section-iterate name="PostsSection" list="postList" entry="intermediatePostList">
                <widgets>
                    <form-list name="PostFormList" list="postTitleList" skip-form="true" skip-header="true">
                        <field name="content0"><default-field><image url="downloadContent" url-type="transition" width="80px" parameter-map="[partyContentId:intermediatePostList?.get(0)]"/></default-field></field>
                        <field name="content1"><conditional-field condition="intermediatePostList.size() &gt; 1"><image url="downloadContent" url-type="transition" width="80px" parameter-map="[partyContentId:intermediatePostList?.get(1)]"/></conditional-field></field>
                        <field name="content2"><conditional-field condition="intermediatePostList.size() &gt; 2"><image url="downloadContent" url-type="transition" width="80px" parameter-map="[partyContentId:intermediatePostList?.get(2)]"/></conditional-field></field>
                    </form-list>
                </widgets>
            </section-iterate>
        </row-col></container-row>
    </widgets>
</screen>
