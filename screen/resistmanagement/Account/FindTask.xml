<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-3.xsd"
        default-menu-title="Tasks" default-menu-index="5" default-menu-include="true" standalone="true">

    <parameter name="partyId" required="true"/>

    <always-actions><service-call name="resistmanagement.ProfileServices.check#AccountEdit" in-map="[partyId:partyId]"/></always-actions>

    <transition name="findTask"><default-response url="."/></transition>
    <transition name="editTask"><default-response url="../../Task/TaskSummary"/></transition>

    <transition name="createTask"><service-call name="mantle.work.TaskServices.create#Task"
            in-map="context + [partyId:partyId, ownerPartyId:partyId, assignToPartyId:partyId, assignRoleTypeId:'Manager']"/>
        <default-response url="."/></transition>

    <!-- row selection action form transitions -->
    <transition name="updateTask"><service-call name="mantle.work.TaskServices.update#Task" in-map="context"/>
        <default-response url="."/></transition>
    <transition name="removeWorkEffortParty"><service-call name="mantle.work.WorkEffortServices.remove#WorkEffortParty" in-map="context"/>
        <default-response url="."/></transition>

    <pre-actions><set field="html_title" value="Find Task"/></pre-actions>

    <actions>
        <entity-find entity-name="mantle.work.effort.WorkEffortAndParty" list="myProjectList">
            <date-filter/><econdition field-name="partyId"/>
            <econdition field-name="roleTypeId" value="Manager"/>
            <econdition field-name="workEffortTypeEnumId" value="WetProject"/>
            <order-by field-name="workEffortId"/>
        </entity-find>
        <set field="myProjectIds" from="myProjectList.workEffortId"/>

<!--        <log level="warn" message="myProjectIds ${myProjectIds.toString()}"/>-->

        <entity-find entity-name="mantle.work.effort.PartyTaskSummary" list="taskList" distinct="true">
            <search-form-inputs default-order-by="priority,workEffortId">
                <default-parameters statusId="WeInPlanning,WeApproved,WeInProgress,WeOnHold,WeComplete" statusId_op="in"/></search-form-inputs>
            <econdition field-name="workEffortTypeEnumId" value="WetTask"/>
            <econdition field-name="rootWorkEffortId" operator="in" from="myProjectIds" or-null="true"/><!-- only tasks in allowed projects -->
            <select-field field-name="rootWorkEffortId,workEffortId,workEffortTypeEnumId,workEffortName,description,lastUpdatedStamp"/>
            <order-by field-name="-lastUpdatedStamp"/>
        </entity-find>

<!--        <log level="warn" message="taskList ${taskList.toString()}"/>-->

        <set field="taskTitleList" from="[[thisIsRequiredBecause:'a form list needs one entry']]"/>
    </actions>
    <widgets>
        <container-row><row-col lg="12">
            <form-list name="SetTask" list="taskTitleList" skip-header="true" skip-form="true">
                <field name="title"><default-field><label text="Tasks" type="h2"/></default-field></field>
                <field name="buttonText"><default-field>
                    <container-dialog id="NewTaskContainer" button-text="New Task">
                        <form-single name="NewTaskForm" transition="createTask" pass-through-parameters="true">
                            <field name="workEffortName"><default-field title="Task Name"><text-line/></default-field></field>
                            <field name="description"><default-field title="Description"><text-area rows="10" cols="60"/></default-field></field>
                            <field name="submitButton"><default-field title="Create"><submit/></default-field></field>
                        </form-single>
                    </container-dialog>
                </default-field></field>
            </form-list>

            <form-list name="ListTasks" list="taskList" transition="removeWorkEffortParty" skip-header="true">
                <field name="workEffortId"><default-field><hidden/></default-field></field>
                <field name="partyId"><default-field><hidden/></default-field></field>
                <field name="workEffortName"><default-field title="Name"><container-dialog id="UpdateTaskContainer" button-text="${workEffortName}">
                    <form-single name="UpdateTaskForm" transition="updateTask" pass-through-parameters="true">
                        <field name="workEffortId"><default-field><hidden/></default-field></field>
                        <field name="workEffortName"><default-field title="Task Name"><text-line/></default-field></field>
                        <field name="description"><default-field title="Description"><text-area rows="10" cols="60"/></default-field></field>
                        <field name="submitButton"><default-field title="Create"><submit/></default-field></field>
                    </form-single>
                </container-dialog></default-field></field>
                <field name="description"><default-field><label text="${description}"/></default-field></field>
<!--                <field name="deleteButton"><default-field title=""><submit icon="fa fa-trash"/></default-field></field>-->
            </form-list>
        </row-col></container-row>
    </widgets>
</screen>
