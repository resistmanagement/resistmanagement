<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-3.xsd"
        default-menu-title="Find Accounts" default-menu-include="false" standalone="true">

    <transition name="createPersonAccount"><service-call name="resistmanagement.ResistServices.create#PersonProfile"/>
        <default-response url="."/></transition>

    <actions>
        <entity-find entity-name="mantle.party.PartyFromAndToRelationship" list="pfatrList">
            <econdition field-name="relationshipTypeEnumId" value="PrtManager"/>
            <econdition field-name="fromPartyId" from="ec.user.userAccount.partyId"/>
            <date-filter/>
            <select-field field-name="partyRelationshipId, fromPartyId, fromRoleTypeId, toPartyId, toRoleTypeId, toPseudoId"/>
        </entity-find>
        <entity-find entity-name="mantle.party.RoleType" list="rtList">
            <econdition field-name="roleTypeId" operator="in" from="pfatrList?.toRoleTypeId + pfatrList?.fromRoleTypeId"/>
        </entity-find>
        <!-- TODO: This is probably more complicated than it has to be because of using the PartyFromAndToRelationship view entity. -->
        <set field="pfatrKeyValueList" from="pfatrList?.groupBy{ it.toPseudoId }.collectEntries{ key, value -> [(key):[partyRelationshipIdList:value*.partyRelationshipId, fromRoleTypeIdList:value*.fromRoleTypeId, toPartyIdList:value*.toPartyId, toRoleTypeIdList:value*.toRoleTypeId]] }"/>

        <entity-find-one entity-name="mantle.party.PartySettingType" value-field="partySettingType" auto-field-map="[partySettingTypeId:'PartyVisibility']"/>

<!--        <log level="warn" message="partySettingType.type ${partySettingType?.type?.enums}"/>-->
    </actions>

    <widgets>
        <container-row><row-col lg="12">
            <section name="PartyAccountSection"><actions>
            </actions><widgets>
                <container-box><box-header title="Accounts"/><box-toolbar>
                    <container-dialog id="SetPersonalTalentAccountDialog" button-text="Create Personal">
                        <form-single name="SetPersonalTalentAccountForm" transition="createPersonAccount">
                            <field name="partySettingTypeId"><default-field><hidden default-value="PartyVisibility"/></default-field></field>
                            <field name="pseudoId"><default-field title="Account Username"><text-line/></default-field></field>
                            <field name="settingValue" from="partySettingType?.defaultValue"><default-field title="Account Visibility">
                                <drop-down><list-options list="partySettingType?.type?.enums" key="${enumId}" text="${description}"/></drop-down>
                            </default-field></field>
                            <field name="submitButton"><default-field title="Set"><submit/></default-field></field>
                            <field-layout>
                                <field-row><field-ref name="pseudoId"/><field-ref name="settingValue"/></field-row>
                                <field-ref name="submitButton"/>
                            </field-layout>
                        </form-single>
                    </container-dialog>
<!--                    <container-dialog id="SetOrganizationalTalentAccountDialog" button-text="Create Organizational">-->
<!--                        <form-single name="SetOrganizationalTalentAccountForm" transition="createOrganizationalAccount">-->
<!--                            <field name="nickname"><default-field title="Account Name"><text-line/></default-field></field>-->
<!--                            <field name="submitButton"><default-field title="Set"><submit/></default-field></field>-->
<!--                        </form-single>-->
<!--                    </container-dialog>-->
                </box-toolbar><box-body-nopad>
                    <form-list name="TalentAccountForm" list="pfatrKeyValueList" list-entry="pfatrKeyValue" transition="deletePersonAccount">
                        <field name="partyRelationshipId" from="pfatrKeyValue.value.partyRelationshipIdList"><default-field><hidden/></default-field></field>
                        <field name="fromRoleTypeId" from="pfatrKeyValue.value.fromRoleTypeIdList"><default-field title="You are"><display text="${rtList.findAll{ pfatrKeyValue.value.fromRoleTypeIdList.unique{ a, b -> a &lt;=&gt; b }.contains( it.roleTypeId ) }.description.join(', ')}"/></default-field></field>
                        <field name="toPseudoId" from="pfatrKeyValue.key"><default-field title="to"><link url="../EditAccount" text="${toPseudoId}" tooltip="Edit Account" parameter-map="[partyId:pfatrKeyValue.value.toPartyIdList.unique{ a, b -> a &lt;=&gt; b }[0]]"/></default-field></field>
                        <field name="toRoleTypeId" from="pfatrKeyValue.value.toRoleTypeIdList"><default-field title="which is a"><display text="${rtList.findAll{ pfatrKeyValue.value.toRoleTypeIdList.unique{ a, b -> a &lt;=&gt; b }.contains( it.roleTypeId ) }.description.join(', ')}"/></default-field></field>
<!--                        <field name="submit"><default-field title=""><submit icon="fa fa-trash"/></default-field></field>-->
                    </form-list>
                </box-body-nopad></container-box>
            </widgets></section>

        </row-col></container-row>
    </widgets>
</screen>
