<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-3.xsd"
        default-menu-title="Account" default-menu-index="2" render-modes="qvt">

    <parameter name="partyId" required="true"/>

    <always-actions><service-call name="resistmanagement.ResistServices.check#AccountEditError" in-map="[partyId:partyId]"/></always-actions>

    <transition-include name="downloadContent" location="component://resistmanagement/screen/Account/ViewAccount.xml"/>
    <transition name="updateProfilePicture"><service-call name="resistmanagement.ResistServices.upload#ProfilePictureAttachment" in-map="[partyId:partyId, contentFile:contentFile]"/>
        <default-response url="."/></transition>
    <transition name="updateProfile"><service-call name="resistmanagement.ResistServices.update#Account"/>
        <default-response url="."/></transition>

    <actions>
<!--        <log level="warn" message="partyId ${partyId}"/>-->
<!--        <log level="warn" message="partyContentList ${partyContentList}"/>-->
<!--        <log level="warn" message="partyProfilePictureList ${partyProfilePictureList}"/>-->

        <entity-find-one entity-name="mantle.party.Party" value-field="party">
            <field-map field-name="partyId"/></entity-find-one>

        <!-- Temporarily make sure that the party has a valid profile picture content -->
        <entity-find entity-name="mantle.party.PartyContent" list="partyContentList">
            <econdition field-name="partyId"/>
            <econdition field-name="partyContentTypeEnumId" value="PcntPrimaryImage"/>
            <order-by field-name="-contentDate"/></entity-find>
        <set field="partyProfilePictureList" from="[[partyContentId:partyContentList.getFirst()?.partyContentId, partyText:party?.pseudoId ?: (party?.person?.firstName + ' ' + party?.person?.lastName) ?: party?.organization?.organizationName]]"/>
        <entity-find entity-name="mantle.party.PartyContent" list="partyContentBioList">
            <econdition field-name="partyId"/>
            <econdition field-name="partyContentTypeEnumId" value="PcntBio"/>
            <order-by field-name="-contentDate"/></entity-find>
        <set field="bio" from="partyContentBioList?.getFirst()?.description"/>

        <entity-find-one entity-name="mantle.party.PartySettingType" value-field="partySettingType" auto-field-map="[partySettingTypeId:'PartyVisibility']"/>
        <entity-find-one entity-name="mantle.party.PartySetting" value-field="partyVisibilitySetting" auto-field-map="[partyId:partyId,partySettingTypeId:partySettingType.partySettingTypeId]"/>

<!--        <log level="warn" message="partyVisibilitySetting ${partyVisibilitySetting}"/>-->
    </actions>
    <widgets>
        <form-list name="PartyProfilePictureSection" list="partyProfilePictureList" skip-form="true" skip-header="true">
            <row-actions><set field="contentUrl" from="sri.buildUrl('downloadContent').addParameter('partyContentId', partyContentId).getUrlWithParams()"/></row-actions>
            <field name="content"><default-field>
                <container-dialog id="UpdateProfilePicture" button-text="Update Picture">
                    <text><![CDATA[<template v-slot:button><img src="${contentUrl}" width="100px"/></template>]]></text>
                    <form-single name="UpdateProfilePictureForm" transition="updateProfilePicture">
                        <field name="partyId"><default-field><hidden/></default-field></field>
                        <field name="contentFile"><default-field><file/></default-field></field>
                        <field name="submit"><default-field><submit/></default-field></field>
                    </form-single></container-dialog>
            </default-field></field>
        </form-list>
        <form-single name="PartyProfileEditSection" transition="updateProfile">
            <field name="partyId"><default-field><hidden/></default-field></field>
            <field name="pseudoId"><default-field title="Id"><text-line default-value="${party.pseudoId}"/></default-field></field>
            <field name="settingValue" from="partyVisibilitySetting?.settingValue ?: partySettingType?.defaultValue"><default-field title="Account Visibility">
                <drop-down><list-options list="partySettingType?.type?.enums" key="${enumId}" text="${description}"/></drop-down>
            </default-field></field>
            <field name="bio"><default-field><text-area/></default-field></field>
            <field name="submit"><default-field><submit text="Submit"/></default-field></field>

            <field-layout>
                <field-row><field-ref name="pseudoId"/><field-ref name="settingValue"/></field-row>
                <fields-not-referenced/>
            </field-layout>
        </form-single>
    </widgets>
</screen>
